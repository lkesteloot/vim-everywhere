{
    "title": "Caps to Hyper/Escape; Hyper + VIM Navigation keys",
    "rules": [
        {
            "description": "Caps to Hyper or Escape if alone",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": ["right_control", "left_control", "left_option"]
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Caps + vim == Arrow Keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "0",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "home"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "4",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "right_control",
                                "left_control",
                                "left_option"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "end"
